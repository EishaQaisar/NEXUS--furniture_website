    <section class="cart">
        <div class="container">
            <div class="shopping-cart1" style="height: 600px;">
                <!-- Title -->
                <div class="title1">
                    Shopping Bag
                </div>

                <!-- Iterate over each item in the cart -->
                <% if (cart && cart.items.length > 0) { %>
                    <% cart.items.forEach(item => { %>
                        <div class="item1">
                            <div class="buttons1">
                            </div>

                            <div class="image1">
                                <img src="<%= item.image %>" alt="<%= item.name %>" />
                            </div>

                            <div class="description1">
                                <!-- Display product details like name, color, etc. -->
                                <!-- <span><%= item.product %></span> -->
                                <span><%= item.name %></span>
                                <span>Category: <%= item.category %></span>
                            </div>

                            <div class="quantity1">
                                <!-- Display quantity and provide options to update -->
                                <input type="number" value="<%= item.quantity %>" min="1">
                            </div>

                            <div class="total-price1">
                                <!-- Display the total price for this item -->
                                <span><%= item.price %></span>
                            </div>
                        </div>
                        
                    <% }); %>
                    <form action="/processOrder" method="post" style="text-align: center;">
                        <div style="display: block; text-align: end; padding-right: 200px;">
                            <div><span>Suyuubtotal:</span> <span><%= cart.totalAmount %></span></div>
                            <div><span>Total Amount (including tax):</span> <span><%= totalAmount %></span></div>
                         </div>
                         
                        <div class="payment-method" style="margin-top: 100px;">
                            <label for="payment-method">Select Payment Method:</label>
                            <select id="payment-method" name="paymentMethod">
                                <option value="cod">Cash on Delivery</option>
                                <option value="online">Online Payment</option>
                            </select>
                        </div>
                        <div class="input" style="display: inline-flex; align-items: center ;gap:20px;">
                            <label for="input">Email:</label>
                            <input style="width:200px;" type="email" id="email" name="email" placeholder="Enter email" required>
                        </div>


                      
                        <div>
                            <input type="hidden" name="totalAmount" value="<%= totalAmount %>">

                            <a href="/checkout"><button class="btn" type="submit"  style="color:black;width:120px; height: 40px;">Confirm</button></a>
                        </div>
                     </form>
                     <form style="text-align: center; " action="/applyDiscount" method="post">
                        <% if (displayDiscount ) { %>
                            <div class="discount-code" style="display: inline-flex; align-items: center ;gap:20px;">
                                <label for="discount-code">Discount Code:</label>
                                <input style="width:200px;" type="text" id="discount-code" name="discountCode" placeholder="Enter discount code">
                                <button class="btn">Apply</button>
                            </div>
                            <% } %>
                     </form>
                     
                     

                <% } else { %>
                    <!-- If the cart is empty, display a message -->
                    <p>Your cart is empty.</p>
                <% } %>
                
            </div>
        
            
            <!-- Add a checkout button if needed -->
            <!-- <button class="checkout">Checkout</button> -->
        </div>
    </section>
  
